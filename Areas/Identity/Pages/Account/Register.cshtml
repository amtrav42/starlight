@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <img src="~/images/starlightTVBlue.png" />
    </div>
    <div class="col-md-4"></div>
</div>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group">
                    <div  style ="padding-left: 0"class="form-group col-md-6">
                        <img style="width:20px;height:20px;float:right" src="~/images/refresh.png" id="refresh1" />
                        <label asp-for="Input.UserNameFirst"></label>
                        <input asp-for="Input.UserNameFirst" class="form-control" />
                        <span asp-validation-for="Input.UserNameFirst" class="text-danger"></span>
                    </div>
                    <div style ="padding-right: 0" class="form-group col-md-6">
                        <img style="width:20px;height:20px;float:right" src="~/images/refresh.png" id="refresh2"/>
                        <label asp-for="Input.UserNameSecond"></label>
                        <input asp-for="Input.UserNameSecond" class="form-control" />
                        <span asp-validation-for="Input.UserNameSecond" class="text-danger"></span>
                    </div>
                </div>
             </div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-default btn-block btn-success btn-lg" style="margin-top: 30px">Register</button>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
